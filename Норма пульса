name = input("Приветик, представься, пожалуйста: ")
age = int(input("Сколько тебе лет?: "))
pulse = int(input("Какой у тебя пульс?: "))
if age <= 10:
    if pulse <= 130 and pulse >= 70:
        print(name + ", да ты спортсмен? Пульс в норме!")
    else:
        print("Лучше сходить к врачу, пульс не в норме!")
elif age >= 11 and age <= 50:
    if pulse <= 100 and pulse >= 60:
        print(name + ", да ты спортсмен? Пульс в норме!")
    else:
        print("Лучше сходить к врачу, пульс не в норме!")
else:
    if pulse <= 90 and pulse >= 60:
        print(name + ", да ты спортсмен? Пульс в норме!")
    else:
        print("Лучше сходить к врачу, пульс не в норме!")
